#!/usr/bin/perl

use warnings;
use strict;

my $ip;

`xhost +` ;

my $line = `ipconfig | grep 'IP Address' `;
warn $line;

if ($line =~ /(\d+([.]\d+){3})/) {
    $ip = $1;
} else {
    die "NO MATCH";
}

my $display = "$ip:0.0";
warn $display;
`ssh schemelab\@li2-168.members.linode.com 'export DISPLAY=$display; xterm'`;




